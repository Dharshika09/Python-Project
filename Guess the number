import random
def guessthenumber():
    print("Welcome to the Number Guessing Game!ğŸ‘‹")
    print("I'm thinking of a number between 1 to 100.âœŒï¸")
    print("You have chances to guess the correct number based on your choice.ğŸ˜€")

    number = random.randint(1, 100)
    print()

    print("\nPlease select the difficulty level:")
    print("1. Easy (10 chances)ğŸ˜€")
    print("2. Medium (5 chances)ğŸ˜„")
    print("3. Hard (3 chances)ğŸ˜‘\n")


    choice = int(input("Enter your choice [1,2,3]: "))

    if choice == 1:
        attempts = 10
        print("Great! You have selected the Easy difficulty level.ğŸ˜Š")
    elif choice == 2:
        attempts = 5
        print("Great! You have selected the Medium difficulty level.ğŸ˜Š")
    else:
        attempts = 3
        print("Great! You have selected the Hard difficulty level.ğŸ˜Š")

    print("Let's start the game!ğŸ«¡")

    for i in range(attempts):
        guess = int(input("Enter your guess: "))
        i = i + 1
        if guess == number:
            print(f"ğŸ‰ Congratulations! You guessed the correct number in {i} attempts.ğŸ¥³")
            break
        elif guess < number:
            print(f"The number is greater than {guess}. Try again!")
        else:
            print(f"The number is less than {guess}. Try again!")

    else:
        print(f"ğŸ˜ Sorry! You've used all your attempts. The correct number was {number}.")

